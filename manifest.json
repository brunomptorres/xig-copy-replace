{
  "manifest_version": 2,
  "name": "XIG Copy Replace",
  "version": "1.7",
  "description": "Replaces copied links from Instagram and X (Twitter), to use InstaFix (zzinstagram) and FxEmbed (fxtwitter).",
  "icons": {
    "16": "icons/logo-16.png",
    "32": "icons/logo-32.png",
    "48": "icons/logo-48.png",
    "64": "icons/logo-64.png",
    "96": "icons/logo-96.png",
    "128": "icons/logo-128.png",
    "256": "icons/logo-256.png",
    "512": "icons/logo-512.png"
  },
  "permissions": ["clipboardWrite"],
  "browser_specific_settings": {
    "gecko": {
      "id": "{ec86289c-9da5-41e3-8a0a-a3aaa9ea24ab}",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*",
        "*://*.x.com/*",
        "*://*.twitter.com/*"
      ],
      "js": ["index.js"]
    }
  ]
}
